@{
        ViewData["Title"] = "Registrarse - SmarTrip";
    }
<body>
    <div class="container registro">
        <form method="post" id="Registrarseform2" asp-controller="Account" onsubmit="return enviarForm();" class="form-register">
            <div class="form-group">
                <label id="contactoLabel" for="contacto">Ingrese su email: </label>
                <input type="email" id="contacto" name="email" placeholder="Introducir email" required class="form-control">
                <a id="toggleLink" onclick="toggleEmailPhone()" class="toggle-link">¿Usar número de teléfono?</a>
            </div>
            <div class="form-group">
                <label for="contraseña">Ingrese su contraseña: </label>
                <input type="password" id="contraseña" name="contraseña" required class="form-control">
            </div>
            <div class="form-group">
                <label for="confirmar_contraseña">Confirme su contraseña: </label>
                <input type="password" id="confirmar_contraseña" name="confirmar_contraseña" required class="form-control">
            </div>
            <input type="hidden" id="nombre" name="nombre" value="@ViewBag.Datos.nombre">
            <input type="hidden" id="apellido" name="apellido" value="@ViewBag.Datos.apellido">
            <input type="hidden" id="fechaNacimiento" name="fechaNacimiento" value="@ViewBag.Datos.fechaNacimiento">
            <input type="hidden" id="genero" name="genero" value="@ViewBag.Datos.genero">
            <div class="button-container">
            <a class="color" href="@Url.Action("Registrarse", "Home")"><button type="button" class="btn btn-secondary">Volver</button></a>
            <button type="submit" class="btn btn-primary">Continuar</button>
        </div>
        </form>
    </div>
</body>
