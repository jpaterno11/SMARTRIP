 @{
        ViewData["Title"] = "Login - SmarTrip";
    }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
</head>
<body>
<h2> @ViewBag.Mensaje </h2>
    <div class="container login">
        <form method="post" id="Login" asp-controller="Account" onsubmit="return enviarLogin();" class="form-login">
            <div class="form-group">
                <label id="contactoLabel" for="contacto">Ingrese su email: </label>
                <input type="email" id="contacto" name="email" placeholder="Introducir email" required class="form-control">
                <a id="toggleLink" onclick="toggleEmailPhone()" class="toggle-link">¿Usar número de teléfono?</a>
            </div>
            <div class="form-group">
                <label for="contraseña">Ingrese su contraseña: </label>
                <input type="password" id="contraseña" name="contraseña" placeholder="Introducir contraseña" required class="form-control">
            </div>
            <div class="button-container">
                <a class="color" href="@Url.Action("Registrarse", "Home")"><button type="button" class="btn btn-secondary">Registrarse</button></a>
                <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                <a class="color" href='@Url.Action("OlvideMiContraseña", "Home")'> <button type="button" class="btn btn-secondary">Olvidé mi contraseña </button></a>
            </div>
        </form>
    </div>

</body>
<footer class = "footer2">

</footer>

</html>