<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] </title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>
<nav class="navbar navbar-custom navbar-expand-lg">
  <div class="container-fluid">
    <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")">
      <img src="../img/Logo_claro.png" alt="Logo" style="height: 40px;">
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarText">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="#">Viaja</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="@Url.Action("QuienesSomos", "Home")">Quiénes somos</a>
        </li>
      </ul>
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="@Url.Action("Ayuda", "Home")">Ayuda</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="@Url.Action("Login", "Home")">¿Ya tienes una cuenta?</a>
        </li>
        <li class="nav-item">
          <a class="color" href="@Url.Action("Registrarse", "Home")"><button type="button" class="btn btn-primary">Registrarse</button></a>
        </li>
      </ul>
    </div>
  </div>
</nav>
    <main role="main">
        @RenderBody()
    </main>
<footer class="footer">
<div class="row justify-content-around">
    <div class="col d-flex justify-content-center align-items-center">
        <div class="logo-section d-flex flex-column">
            <img class="p-2" src="../img/Logo_claro.png" alt="Logo">
            <p class="p-2">El socio de todos de tus viajes</p>
        </div>
    </div>
    <div class="col d-flex justify-content-center align-items-center">
        <div class="links d-flex flex-column">
            <a class="p-2" href='@Url.Action("Ayuda", "Home")'>Ayuda</a>
            <a class="p-2" href='@Url.Action("Viaja", "Home")'>Viajar</a>
            <a class="p-2" href='@Url.Action("QuienesSomos", "Home")'>¿Quiénes somos?</a>
        </div>
    </div>
    <div class="col d-flex justify-content-center align-items-center">
        <div class="social-icons d-flex flex-column">
    <div class="row p-2">
        <div class="col">
            <a href="#"><i class="fab fa-lg fa-instagram"></i></a>
        </div>
        <div class="col">
            <a href="#"><i class="fab fa-lg fa-twitter"></i></a>
        </div>
  </div>
    <div class="row p-2">
        <div class="col">
            <a href="#"><i class="fab fa-lg fa-youtube"></i></a>
        </div>
        <div class="col">
            <a href="#"><i class="fab fa-lg fa-linkedin"></i></a>
        </div>
    </div>
    <div class="row p-2">
        <div class="col">
            <a href="#"><i class="fab fa-lg fa-facebook"></i></a>
        </div>
        <div class="col">
            <a href="#"><i class="fab fa-lg fa-threads"></i></a>
        </div>
    </div>
</div>
</footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://kit.fontawesome.com/9a1917b0d8.js" crossorigin="anonymous"></script>
</body>

</html>
