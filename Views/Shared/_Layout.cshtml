<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NombreProyecto</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>

<body>

    <style>
        /* Estilos personalizados */
        .navbar-custom {
            background-color: #03045E; /* Azul oscuro */
        }
        .navbar-custom .navbar-brand,
        .navbar-custom .nav-link,
        .navbar-custom .navbar-text {
            color: #FFFFFF;
        }
        .btn-register {
            background-color: #00C8C8;
            color: white;
        }
        .footer {
            background-color: #03045E; /* Azul oscuro */
            color: #FFFFFF;
            padding: 20px 0;
        }
        .footer a {
            color: #00C8C8;
            text-decoration: none;
        }
        .footer a:hover {
            text-decoration: underline;
        }
    </style>


<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-custom">
    <a class="navbar-brand"  href='@Url.Action("Index", "Home")' >SmarTrip</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href='@Url.Action("Viaja", "Home")'>Viajar</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href='@Url.Action("QuienSomos", "Home")'>Quiénes somos</a>
            </li>
        </ul>
        <div class="d-flex align-items-center">
            <span class="navbar-text">
                <a href="#" class="text-white mr-3">¿Ya tienes una cuenta?</a>
            </span>
            <a href='@Url.Action("Registrarse", "Home")' class="btn btn-register">Registrarse</a>
        </div>
    </div>
</nav>

<!-- Footer -->
<footer class="footer">
    <div class="container text-center">
        <p>SmarTrip</p>
        <p>El socio de todos de tus viajes</p>
        <div class="row">
            <div class="col-md-4">
                <a href='@Url.Action("Ayuda", "Home")'>Ayuda</a>
            </div>
            <div class="col-md-4">
                <a href='@Url.Action("Viaja", "Home")'>Viajar</a>
            </div>
            <div class="col-md-4">
                <a href='@Url.Action("QuienSomos", "Home")'>¿Quiénes somos?</a>
            </div>
        </div>
        <div class="mt-3">
            <a href="#"><i class="fab fa-instagram"></i></a>
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-youtube"></i></a>
            <a href="#"><i class="fab fa-linkedin"></i></a>
            <a href="#"><i class="fab fa-facebook"></i></a>
            <a href="#"><i class="fab fa-envelope"></i></a>
        </div>
    </div>
</footer>

    <header>
   
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
